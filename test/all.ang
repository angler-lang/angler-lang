-- map : forall

zeroes : L.List Nat -> L.List Nat
zeroes = filter $ \ Z -> True

ones : L.List Nat -> L.List Nat
ones = map S . zeroes

firstZ : forall n:Nat . Vect n Nat -> Nat
firstZ (Z :: xs) = Z
firstZ (_ :: xs) = S (firstZ xs)
