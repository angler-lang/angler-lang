_+_ : t -> t -> t
        where t = Nat
-- t no está disponible aquí
Z     +   m = m
(S n) +   m = S (n + m)
_+_ Z     m = m
_+_ (S n) m = S (n + m)

filter : forall t:Type . (t -> Bool) -> L.List t -> L.List t
-- filter g (x :: xs) {t = tpe} =
--         (if g x
--                 then _::_ x
--                 else the (L.List tpe)) filter g xs
filter g (x L.:: xs) =
        (if g x
                then _::_ x
                else id) filter g xs
filter _ (L.Nil) = L.Nil

filterVect : forall t:Type, n:Nat . (t -> Bool) -> Vect n t -> exists (m:Nat ; Vect m t)
filterVect g (x :: xs) = (if g x then _::_ x else id) filterVect g xs
filterVect _ (Nil    ) = Nil
